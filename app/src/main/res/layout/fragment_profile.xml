<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/dummy_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Full Name"
        android:fontFamily="@font/jost_bold"
        android:textSize="24dp"
        android:textColor="@color/futsal_item_heading"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/jost_semi_bold"
        android:text="Menu"
        android:textColor="@color/futsal_item_heading"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_profile_name" />

    <TextView
        android:id="@+id/text_view_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_medium"
        android:text="Notifications"
        android:textColor="@color/alternate_black_headings"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/border_color"
        app:layout_constraintEnd_toEndOf="@id/text_view_notification"
        app:layout_constraintStart_toStartOf="@id/text_view_notification"
        app:layout_constraintTop_toBottomOf="@+id/text_view_notification" />

    <TextView
        android:id="@+id/text_view_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_medium"
        android:text="Edit Profile"
        android:textColor="@color/alternate_black_headings"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView22"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/divider5" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/border_color"
        app:layout_constraintEnd_toEndOf="@id/text_view_edit_profile"
        app:layout_constraintStart_toStartOf="@id/text_view_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_view_edit_profile" />

    <TextView
        android:id="@+id/text_view_edit_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_medium"
        android:text="Change Password"
        android:textColor="@color/alternate_black_headings"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_edit_profile"
        app:layout_constraintStart_toStartOf="@+id/text_view_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/border_color"
        app:layout_constraintEnd_toEndOf="@id/text_view_edit_password"
        app:layout_constraintStart_toStartOf="@id/text_view_edit_password"
        app:layout_constraintTop_toBottomOf="@+id/text_view_edit_password" />

    <TextView
        android:id="@+id/text_view_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_medium"
        android:text="Logout"
        android:textColor="@color/alternate_black_headings"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_edit_password"
        app:layout_constraintStart_toStartOf="@+id/text_view_edit_password"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />


</androidx.constraintlayout.widget.ConstraintLayout>